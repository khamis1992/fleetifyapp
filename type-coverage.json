{
  "strict": true,
  "atLeast": 80,
  "ignoreFiles": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "src/server/**",
    "src/generated/**",
    "*.config.*",
    "*.test.*",
    "*.spec.*",
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "ignoreCatch": true,
  "update": false,
  "detail": true,
  "showUncovered": true,
  "cache": true,
  "cacheLocation": "node_modules/.cache/type-coverage",
  "rules": {
    "no-explicit-any": "error",
    "prefer-const": "warn"
  },
  "exclude": [
    "**/*.d.ts"
  ],
  "sort": true,
  "limit": 20,
  "reporter": ["text", "json"],
  "outputFile": "type-coverage-report.json",
  "workspace": {
    "packages": ["src/**"]
  }
}