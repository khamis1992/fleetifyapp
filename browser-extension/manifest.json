{
  "manifest_version": 3,
  "name": "العراف - مساعد تقاضي",
  "name_localized": {
    "en": "Al-Araf - Taqadi Assistant"
  },
  "version": "1.0.0",
  "description": "إضافة لتعبئة نماذج تقاضي تلقائياً من نظام العراف",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://taqadi.sjc.gov.qa/*",
    "https://www.alaraf.online/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://taqadi.sjc.gov.qa/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://taqadi.sjc.gov.qa/*"]
    }
  ]
}

