{
  "manifest_version": 3,
  "name": "إضافة رفع الدعاوى التلقائية - شركة العراف",
  "version": "2.0.0",
  "description": "أتمتة كاملة لرفع الدعاوى في نظام تقاضي مع رفع الملفات",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.alaraf.online/*",
    "https://taqadi.sjc.gov.qa/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background-service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.alaraf.online/legal/lawsuit/prepare/*"],
      "js": ["content-alaraf.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://taqadi.sjc.gov.qa/*"],
      "js": ["content-taqadi-advanced.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["https://www.alaraf.online/*", "https://taqadi.sjc.gov.qa/*"]
    }
  ]
}

