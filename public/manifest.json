  "categories": [
    "business",
    "productivity",
    "utilities"
  ],
  
  "shortcuts": [
    {
      "name": "لوحة التحكم",
      "short_name": "Dashboard",
      "description": "الوصول السريع للوحة التحكم",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "إدارة الأسطول",
      "short_name": "Fleet",
      "description": "إدارة المركبات والأسطول",
      "url": "/fleet",
      "icons": [
        {
          "src": "/icons/shortcut-fleet.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "العملاء",
      "short_name": "Customers",
      "description": "إدارة العملاء والعقود",
      "url": "/customers",
      "icons": [
        {
          "src": "/icons/shortcut-customers.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "التقارير",
      "short_name": "Reports",
      "description": "عرض التقارير والإحصائيات",
      "url": "/reports",
      "icons": [
        {
          "src": "/icons/shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [],
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+fleetify",
      "url": "/handle/%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  }
}
