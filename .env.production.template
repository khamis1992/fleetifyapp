# Fleetify Production Environment Configuration Template
# Copy this to .env.production and fill in your actual values

# ==============================================================================
# SUPABASE CONFIGURATION
# ==============================================================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous (Public) Key
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# Backend API URL (where your Node.js server is deployed)
VITE_API_URL=https://your-backend-domain.railway.app

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ==============================================================================
# SECURITY
# ==============================================================================

# Client-side encryption secret (32 characters minimum)
# Generate with: openssl rand -base64 32
VITE_ENCRYPTION_SECRET=your_32_character_encryption_secret_here

# ==============================================================================
# MONITORING & ERROR TRACKING
# ==============================================================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn-here

# Enable monitoring and analytics
VITE_MONITORING_ENABLED=true
VITE_ENABLE_ANALYTICS=true

# ==============================================================================
# FEATURES & CONFIGURATION
# ==============================================================================

# Application environment
VITE_APP_ENVIRONMENT=production

# Application version
VITE_APP_VERSION=1.0.0

# Maintenance mode (set to true to disable frontend)
VITE_MAINTENANCE_MODE=false

# Debug mode (disable in production)
VITE_DEBUG=false

# ==============================================================================
# PERFORMANCE
# ==============================================================================

# API performance optimizations
VITE_API_PERFORMANCE_OPTIMIZATIONS=true

# Request caching
VITE_API_CACHE_ENABLED=true
VITE_API_CACHE_TTL=300000

# Request deduplication
VITE_REQUEST_DEDUPLICATION_ENABLED=true

# ==============================================================================
# UI/UX SETTINGS
# ==============================================================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Date format (moment.js format)
VITE_DATE_FORMAT=YYYY-MM-DD

# Currency settings
VITE_DEFAULT_CURRENCY=SAR
VITE_CURRENCY_SYMBOL=ï·¼

# ==============================================================================
# EXTERNAL SERVICES (Optional)
# ==============================================================================

# Google Maps API key (if using maps)
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=GA-MEASUREMENT-ID

# Firebase configuration (if using push notifications)
# VITE_FIREBASE_API_KEY=your-firebase-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
# VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# ==============================================================================
# DEVELOPMENT OVERRIDES (for production debugging)
# ==============================================================================

# Override API endpoints for testing
# VITE_OVERRIDE_API_URL=https://staging-api.yourdomain.com

# Enable additional logging (use sparingly in production)
# VITE_VERBOSE_LOGGING=false

# ==============================================================================
# NOTES
# ==============================================================================

# 1. All VITE_ prefixed variables are embedded in the client bundle
#    Never put sensitive server-side secrets here

# 2. Update backend URL after deploying backend service

# 3. Test all features with production values before going live

# 4. Keep this file out of version control (already in .gitignore)

# 5. Use different values for different environments (staging/prod)

# ==============================================================================
# VALIDATION CHECKLIST
# ==============================================================================

# [ ] Supabase URL is correct and accessible
# [ ] Supabase Anon key is valid (not Service Role key)
# [ ] Backend URL is correct and HTTPS
# [ ] Encryption secret is 32+ characters
# [ ] No sensitive data in client-side variables
# [ ] All optional services configured if needed
# [ ] Feature flags set appropriately
# [ ] Test with these values before deployment