# Fleetify Environment Variables Configuration
# 
# This file serves as a template for required environment variables.
# Copy this file to .env for local development.
# 
# IMPORTANT: Never commit .env files to version control!

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# 
# Get these values from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# 
# Supabase Project URL
# Example: https://abcdefghijklmnop.supabase.co
VITE_SUPABASE_URL=your_supabase_project_url_here

# Supabase Anonymous (Public) Key
# This key is safe to expose in the client as it's protected by Row Level Security (RLS)
# Example: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================================
# APPLICATION SECURITY
# ============================================================================
# 
# Application Encryption Secret
# Used for client-side encryption of sensitive data
# 
# Generate a secure random string using one of these methods:
# - OpenSSL: openssl rand -base64 32
# - Node.js: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# 
# IMPORTANT: Use different secrets for different environments
# Example: aB3dE5fG7hI9jK1lM3nO5pQ7rS9tU1vW3xY5zA7bC9dE=
VITE_ENCRYPTION_SECRET=your_32_character_encryption_secret_here

# ============================================================================
# ENVIRONMENT VARIABLE NOTES
# ============================================================================
# 
# 1. VITE_ PREFIX REQUIREMENT
#    - All environment variables exposed to the client MUST start with VITE_
#    - Vite only includes variables with this prefix in the build
#    - Variables without VITE_ prefix are ignored
# 
# 2. SECURITY CONSIDERATIONS
#    - VITE_* variables are embedded in the client bundle (publicly accessible)
#    - Never put backend secrets, API keys with write access, or private keys here
#    - Supabase anon key is safe because it's protected by RLS policies
# 
# 3. ENVIRONMENT-SPECIFIC VALUES
#    Production:  Use Vercel Dashboard → Settings → Environment Variables
#    Preview:     Use Vercel Dashboard → Settings → Environment Variables
#    Development: Use .env file (this file as template)
# 
# 4. LOCAL DEVELOPMENT SETUP
#    Option 1 - Manual:
#      1. Copy this file: cp .env.example .env
#      2. Fill in the actual values from your Supabase project
#      3. Start dev server: npm run dev
# 
#    Option 2 - Vercel CLI (Recommended):
#      1. Install Vercel CLI: npm i -g vercel
#      2. Login: vercel login
#      3. Link project: vercel link
#      4. Pull variables: vercel env pull .env
#      5. Start dev server: npm run dev
# 
# 5. DEPLOYMENT CONFIGURATION
#    - GitHub Actions: Set secrets in Repository → Settings → Secrets
#    - Vercel: Set in Project → Settings → Environment Variables
#    - Do NOT use the 'env' section in vercel.json (deprecated)
# 
# ============================================================================
# TROUBLESHOOTING
# ============================================================================
# 
# Variables showing as undefined?
# 1. Ensure variable name starts with VITE_
# 2. Restart dev server after changing .env
# 3. Check for typos in variable names
# 4. Verify .env file is in the root directory (same level as package.json)
# 
# Supabase connection errors?
# 1. Verify VITE_SUPABASE_URL is correct (check for trailing slashes)
# 2. Confirm VITE_SUPABASE_ANON_KEY is the anon/public key (not service role key)
# 3. Check Supabase project is active and accessible
# 4. Verify RLS policies are properly configured
# 
# Build errors with environment variables?
# 1. In Vercel: Check all variables are set in dashboard
# 2. In GitHub Actions: Verify secrets are configured in repository settings
# 3. For local builds: Ensure .env file exists and is properly formatted
# 
# ============================================================================

# Additional variables can be added below as needed
# Remember: All client-accessible variables must start with VITE_

# ============================================================================
# MONITORING & PERFORMANCE
# ============================================================================

# Application Performance Monitoring (APM)
# Enable comprehensive monitoring and performance tracking
VITE_MONITORING_ENABLED=true

# Monitoring Configuration
VITE_MONITORING_SAMPLE_RATE=0.1  # 10% sampling rate for performance monitoring
VITE_MONITORING_DEBUG=false     # Enable debug mode for monitoring
VITE_PERFORMANCE_MONITORING_ENABLED=true
VITE_BUSINESS_METRICS_ENABLED=true
VITE_USER_BEHAVIOR_TRACKING_ENABLED=false  # Privacy consideration
VITE_PREDICTIVE_MONITORING_ENABLED=false   # Advanced feature
VITE_ALERTING_ENABLED=true

# Monitoring Endpoints (will be auto-detected if not set)
# VITE_MONITORING_API_URL=https://your-project.supabase.co/functions/v1/monitoring-collector

# Data Retention Settings (in days)
MONITORING_RETENTION_DAYS=30
ERROR_LOGS_RETENTION_DAYS=90
METRICS_AGGREGATION_INTERVAL=300000  # 5 minutes in milliseconds

# Monitoring Thresholds
MONITORING_ERROR_RATE_THRESHOLD=0.01  # 1% error rate
MONITORING_RESPONSE_TIME_THRESHOLD=2000  # 2 seconds
MONITORING_CPU_USAGE_THRESHOLD=80  # 80%
MONITORING_MEMORY_USAGE_THRESHOLD=85  # 85%

# External Monitoring Services (optional)
# VITE_SENTRY_DSN=your_sentry_dsn_here
# VITE_DATA_DOG_API_KEY=your_datadog_api_key_here
# VITE_NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# Performance Budgets
VITE_PERFORMANCE_BUDGET_SCRIPTS=600000  # 600KB
VITE_PERFORMANCE_BUDGET_STYLES=50000   # 50KB
VITE_PERFORMANCE_BUDGET_IMAGES=200000  # 200KB
VITE_PERFORMANCE_BUDGET_FONTS=100000   # 100KB
VITE_PERFORMANCE_BUDGET_TOTAL=1000000  # 1MB

# Core Web Vitals Thresholds
VITE_PERFORMANCE_LCP_THRESHOLD=2500  # Largest Contentful Paint (ms)
VITE_PERFORMANCE_FID_THRESHOLD=100   # First Input Delay (ms)
VITE_PERFORMANCE_CLS_THRESHOLD=0.1   # Cumulative Layout Shift

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Application Logging
VITE_LOGGING_ENABLED=true
VITE_LOGGING_LEVEL=info  # debug, info, warn, error
VITE_STRUCTURED_LOGGING=true
VITE_LOG_TO_CONSOLE=true

# Remote Logging
VITE_REMOTE_LOGGING_ENABLED=true
VITE_LOG_FLUSH_INTERVAL=10000  # 10 seconds
VITE_LOG_BATCH_SIZE=100

# ============================================================================
# ERROR TRACKING
# ============================================================================

# Error Tracking Configuration
VITE_ERROR_TRACKING_ENABLED=true
VITE_ERROR_AGGREGATION_ENABLED=true
VITE_ERROR_TREND_ANALYSIS=true
VITE_ERROR_CONTEXT_CAPTURE=true

# Error Reporting
VITE_REPORT_CONSOLE_ERRORS=true
VITE_REPORT_UNHANDLED_REJECTIONS=true
VITE_REPORT_NETWORK_ERRORS=true

# ============================================================================
# BUSINESS INTELLIGENCE
# ============================================================================

# Business Metrics Tracking
VITE_BUSINESS_METRICS_ENABLED=true
VITE_USER_ANALYTICS_ENABLED=true
VITE_CONVERSION_TRACKING=true
VITE_FEATURE_USAGE_TRACKING=true

# Privacy Settings
VITE_ANONYMIZE_IP_ADDRESSES=true
VITE_ANONYMIZE_USER_IDS=false
VITE_COLLECT_PII=false
VITE_GDPR_COMPLIANT=true

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Development Monitoring
VITE_DEV_TOOLS_MONITORING=false  # Additional monitoring in development
VITE_PERFORMANCE_PROFILING=false  # CPU profiling (development only)
VITE_MEMORY_ANALYSIS=false       # Memory usage analysis
VITE_NETWORK_ANALYSIS=false      # Network request analysis

# Debug Features
