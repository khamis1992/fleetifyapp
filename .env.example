VITE_DEBUG_RENDERING=false       # React rendering debugging
VITE_DEBUG_STATE=false          # State debugging
VITE_DEBUG_ROUTING=false        # Router debugging

# ============================================================================
# INFRASTRUCTURE MONITORING
# ============================================================================

# System Health Checks
VITE_HEALTH_CHECK_ENABLED=true
VITE_HEALTH_CHECK_INTERVAL=60000  # 1 minute
VITE_SYSTEM_MONITORING_ENABLED=true

# Database Monitoring
VITE_DATABASE_PERFORMANCE_MONITORING=true
VITE_QUERY_PERFORMANCE_TRACKING=true
VITE_CONNECTION_POOL_MONITORING=true

# API Monitoring
VITE_API_PERFORMANCE_TRACKING=true
VITE_ENDPOINT_MONITORING=true
VITE_REQUEST_RESPONSE_LOGGING=false

# ============================================================================
