VITE_ALERTING_ENABLED=true
VITE_CRITICAL_ERROR_NOTIFICATIONS=true
VITE_PERFORMANCE_DEGRADATION_ALERTS=true
VITE_SYSTEM_HEALTH_ALERTS=true

