# Backend Server Environment Variables
# Copy this file to .env and add your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Configuration (Generate: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_key_minimum_64_characters_long
JWT_EXPIRES_IN=7d

# Redis Configuration (Optional but recommended)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_if_required

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_TO_DATABASE=false
LOG_LEVEL=info

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@fleetifyapp.com
FROM_NAME=FleetifyApp

# WhatsApp Configuration (for future use)
WHATSAPP_WEBHOOK_URL=https://your-webhook-url.com
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
ENCRYPTION_SECRET=your_32_character_encryption_secret_here
SESSION_SECRET=your_session_secret_here

# API Configuration
API_TIMEOUT=30000
API_RATE_LIMIT=1000

# Monitoring and Analytics
ENABLE_MONITORING=true
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ANALYTICS=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_USER=1800
CACHE_TTL_COMPANY=3600

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Development Configuration
DEBUG_SQL=false
ENABLE_CORS=true
ENABLE_COMPRESSION=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_db